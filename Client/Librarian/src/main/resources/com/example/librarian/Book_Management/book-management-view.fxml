<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane maxHeight="1.7976931348623157E308"
           maxWidth="1.7976931348623157E308"
           style="-fx-background-color: transparent;"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="20.0" styleClass="main-content-card">
        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="60.0" />
        </padding>

        <Label text="Quản lý sách" textFill="#233771">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card">
            <TextField prefWidth="300.0" promptText="Tìm kiếm tên sách, tác giả..." style="-fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 8;" />

            <Region HBox.hgrow="ALWAYS" />

            <Button style="-fx-background-color: #233771; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="+ Thêm sách">
                <padding>
                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                </padding>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>

            <Button style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Sửa">
                <padding>
                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                </padding>
            </Button>
            <Button style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Xóa">
                <padding>
                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                </padding>
            </Button>
        </HBox>

        <VBox style="-fx-background-color: white;         -fx-background-radius: 20;         -fx-padding: 15;         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5); " VBox.vgrow="ALWAYS">
            <TableView fx:id="bookTable" prefHeight="400.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <columns>
                    <TableColumn prefWidth="50.0" text="STT" />
                    <TableColumn prefWidth="100.0" text="Mã Sách" />
                    <TableColumn prefWidth="250.0" text="Tên Sách" />
                    <TableColumn prefWidth="150.0" text="Tác Giả" />
                    <TableColumn prefWidth="120.0" text="Thể Loại" />
                    <TableColumn prefWidth="80.0" text="Số Lượng" />
                    <TableColumn prefWidth="100.0" text="Trạng Thái" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>



</StackPane>
