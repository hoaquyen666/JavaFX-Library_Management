<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: transparent;"
           stylesheets="@reader.css"
           maxWidth="1.7976931348623157E308"
           maxHeight="1.7976931348623157E308"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.librarian.controller.ReaderManagementController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox spacing="20.0"
          style="-fx-background-color: white;
          -fx-background-radius: 20;
          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 5);">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="page-title" text="Tài khoản Độc giả" textFill="#233771">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Button styleClass="btn-primary" style="-fx-background-color: #233771; -fx-text-fill: white; -fx-background-radius: 8;" text="+ Thêm" />
            <Button disable="true" styleClass="btn-disabled" text="Sửa" />
            <Button disable="true" styleClass="btn-disabled" text="Reset password" />
            <Button disable="true" styleClass="btn-disabled" text="Xóa" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <ComboBox fx:id="groupFilter" prefWidth="170.0" promptText="Tất cả nhóm quyền" styleClass="filter-combo" style="-fx-background-radius: 8;" />
            <ComboBox fx:id="departmentFilter" prefWidth="170.0" promptText="Tất cả phòng ban" styleClass="filter-combo" style="-fx-background-radius: 8;" />

            <TextField fx:id="searchField" promptText="Tìm kiếm tài khoản, họ tên..." styleClass="search-field" style="-fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS" />

            <Button onAction="#onSearchAction" styleClass="btn-search" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8;" text="Tìm" />
        </HBox>

        <VBox VBox.vgrow="ALWAYS">
            <TableView fx:id="readerTable" editable="true" styleClass="reader-table" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colSelect" prefWidth="40.0" text="" />
                    <TableColumn fx:id="colAvatar" prefWidth="50.0" text="" />
                    <TableColumn fx:id="colAccount" prefWidth="120.0" text="Tài khoản" />
                    <TableColumn fx:id="colFullName" prefWidth="160.0" text="Họ tên" />
                    <TableColumn fx:id="colPhone" prefWidth="110.0" text="Điện thoại" />
                    <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                    <TableColumn fx:id="colDepartment" prefWidth="130.0" text="Phòng ban" />
                    <TableColumn fx:id="colAddress" prefWidth="110.0" text="Địa chỉ" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Trạng thái" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="footer-bar">
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="footer-label" text="Tổng:" />
            <Label fx:id="totalCountLabel" styleClass="footer-count" text="0 bản ghi" />
            <Label styleClass="pager-arrow" text="‹" style="-fx-cursor: hand;" />
            <Label styleClass="pager-current" text="1" style="-fx-font-weight: bold;" />
            <Label styleClass="pager-arrow" text="›" style="-fx-cursor: hand;" />
            <ComboBox fx:id="pageSizeCombo" styleClass="page-size-combo" style="-fx-background-radius: 4;" />
        </HBox>
    </VBox>
</StackPane>