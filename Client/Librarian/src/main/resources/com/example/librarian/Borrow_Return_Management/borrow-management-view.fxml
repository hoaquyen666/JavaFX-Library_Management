<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: transparent;"
           maxWidth="1.7976931348623157E308"
           maxHeight="1.7976931348623157E308"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1">

   <VBox spacing="20.0">
      <padding>
         <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
      </padding>

      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Quản lý mượn sách" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>

         <Region HBox.hgrow="ALWAYS" />

         <Button style="-fx-background-color: #233771; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="+ Tạo phiếu mượn">
            <padding><Insets bottom="8.0" left="15.0" right="15.0" top="8.0" /></padding>
            <font><Font name="System Bold" size="13.0" /></font>
         </Button>
         <Button style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Sửa phiếu">
            <padding><Insets bottom="8.0" left="15.0" right="15.0" top="8.0" /></padding>
            <font><Font name="System Bold" size="13.0" /></font>
         </Button>
      </HBox>

      <VBox spacing="20.0" VBox.vgrow="ALWAYS"
            style="-fx-background-color: white;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 5);
                   -fx-padding: 20;">

         <HBox alignment="CENTER_LEFT" spacing="15.0">
            <ComboBox prefWidth="150.0" promptText="Trạng thái" style="-fx-background-radius: 8;" />
            <ComboBox prefWidth="150.0" promptText="Sắp đến hạn" style="-fx-background-radius: 8;" />

            <TextField promptText="Tìm mã phiếu, mã độc giả, tên sách..." style="-fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS" />

            <Button style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Tìm kiếm">
               <padding><Insets bottom="8.0" left="15.0" right="15.0" top="8.0" /></padding>
            </Button>
         </HBox>

         <VBox VBox.vgrow="ALWAYS">
            <TableView fx:id="borrowTable" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn prefWidth="40.0" text="STT" />
                  <TableColumn prefWidth="90.0" text="Mã Phiếu" />
                  <TableColumn prefWidth="130.0" text="Độc Giả" />
                  <TableColumn prefWidth="180.0" text="Tên Sách" />
                  <TableColumn prefWidth="90.0" text="Ngày Mượn" />
                  <TableColumn prefWidth="90.0" text="Hạn Trả" />
                  <TableColumn prefWidth="90.0" text="Số lượng" />
                  <TableColumn prefWidth="100.0" text="Trạng Thái" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>

         <HBox alignment="CENTER_LEFT" spacing="8.0">
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Tổng cộng:" textFill="#666666" />
            <Label text="0 phiếu mượn" textFill="#233771">
               <font><Font name="System Bold" size="13.0" /></font>
            </Label>
         </HBox>

      </VBox>
   </VBox>
</StackPane>