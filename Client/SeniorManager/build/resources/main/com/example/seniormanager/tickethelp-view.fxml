<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.seniormanager.controller.TicketHelpController"
      style="-fx-background-color: #f0f2f5;">

    <!-- khung chứa thẻ (Nền trắng, bo góc, đổ bóng) -->
    <VBox alignment="CENTER" spacing="12.0" maxWidth="360"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <!-- Tiêu đề -->
        <Label text="Ticket hỗ trợ" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1a73e8;"/>
        <!--<Label text="Đừng ngần ngại mà hãy tìm lấy sự trợ giúp" style="-fx-font-size: 13; -fx-text-fill: #666;"/>-->

        <!-- Khoảng cách -->
        <Region prefHeight="5"/>

        <Label text="Mã nhân viên" alignment="CENTER_LEFT" style="-fx-font-size: 13; -fx-text-fill: #666;"/>
        <TextField fx:id="txtSeniorCode" promptText="Nhập mã nhân viên"
                   style="-fx-padding: 10; -fx-font-size: 13; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <Label text="Tiêu đề" alignment="CENTER_LEFT" style="-fx-font-size: 13; -fx-text-fill: #666;"/>
        <TextField fx:id="txtTitle" promptText="Nhập tiêu đề"
                   style="-fx-padding: 10; -fx-font-size: 13; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <Label text="Mô tả" alignment="CENTER_LEFT" style="-fx-font-size: 13; -fx-text-fill: #666;"/>
        <TextArea fx:id="txtDescription"
                  promptText="Mô tả chi tiết vấn đề (các bước gây lỗi, hành vi mong đợi...)"
                  prefRowCount="4"
                  wrapText="true"
                  style="-fx-padding: 10; -fx-font-size: 13; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <!-- Nút login -->
        <Button text="Gửi" onAction="#onHelpTicketClick" maxWidth="Infinity"
                style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;"/>

    </VBox>
</VBox>