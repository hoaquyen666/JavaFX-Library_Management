<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.reader.HelloController"
            styleClass="reader-page">
    <padding>
        <Insets top="10.0" right="8.0" bottom="8.0" left="8.0"/>
    </padding>

    <top>
        <VBox spacing="10.0">
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Label text="Tài khoản độc giả" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Thêm" styleClass="btn-primary"/>
                <Button text="Sửa" styleClass="btn-disabled" disable="true"/>
                <Button text="Reset password" styleClass="btn-disabled" disable="true"/>
                <Button text="Xóa" styleClass="btn-disabled" disable="true"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <ComboBox fx:id="groupFilter" promptText="Tất cả nhóm quyền" styleClass="filter-combo"/>
                <ComboBox fx:id="departmentFilter" promptText="Tất cả phòng ban" styleClass="filter-combo"/>
                <TextField fx:id="searchField" promptText="Tìm kiếm" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                <Button text="Tìm" onAction="#onSearchAction" styleClass="btn-search"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="6.0">
            <TableView fx:id="readerTable" editable="true" VBox.vgrow="ALWAYS" styleClass="reader-table">
                <columns>
                    <TableColumn fx:id="colSelect" text="" prefWidth="40.0"/>
                    <TableColumn fx:id="colAvatar" text="" prefWidth="56.0"/>
                    <TableColumn fx:id="colAccount" text="Tài khoản" prefWidth="140.0"/>
                    <TableColumn fx:id="colFullName" text="Họ tên" prefWidth="170.0"/>
                    <TableColumn fx:id="colPhone" text="Điện thoại" prefWidth="130.0"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="185.0"/>
                    <TableColumn fx:id="colDepartment" text="Phòng ban" prefWidth="150.0"/>
                    <TableColumn fx:id="colAddress" text="Địa chỉ" prefWidth="120.0"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100.0"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="footer-bar">
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Tổng:" styleClass="footer-label"/>
                <Label fx:id="totalCountLabel" text="0 bản ghi" styleClass="footer-count"/>
                <Label text="‹" styleClass="pager-arrow"/>
                <Label text="1" styleClass="pager-current"/>
                <Label text="›" styleClass="pager-arrow"/>
                <ComboBox fx:id="pageSizeCombo" styleClass="page-size-combo"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
